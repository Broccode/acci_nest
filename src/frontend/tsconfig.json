{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "jsx": "react-jsx",
    "baseUrl": "./",
    "outDir": "../../dist/frontend",
    "paths": {
      "@frontend/*": ["./*"],
      "@shared/*": ["../shared/*"]
    },
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "exclude": ["node_modules", "build", "dist", "coverage"]
} 